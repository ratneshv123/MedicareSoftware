<%- include ('./header1') %>

<section>
    <div class="container">
        <div class="card" style="margin-top: 40px; margin-bottom: 40px;">
            <h5 class="card-header" style="background-color: powderblue;">Search Doctor</h5>
            <div class="card-body">
                <form method="post">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label>Choose Searching Method</label>
                            <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="iprefname">
                                <option selected>Choose Searching Method</option>
                                <option value="4">View All Doctors</option>
                                <option value="1">Sort By name</option>
                                <option value="2">Sort By Speciality</option>
                                <option value="3">Sort By Fees</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-danger" style="margin-top: 30px;" formaction="/viewingdr" type="submit">Submit</button>                            
                        </div>
                    </div>
                </form>
                
                <% if(mesa == 1) { %>
                    <form method="POST" action="/viewthedr">
                        <div class="form-row">
                            <div class="col-md-6">
                                <input type="text" class="form-control"placeholder="Enter Name" name="iname">
                                <input type="hidden" class="form-control" placeholder="Enter Name" value="1" name="ivalue">
                            </div>
                            <div class="col-md-6">
                                <button class="btn btn-danger" type="submit">Submit Name</button>
                            </div>
                        </div>
                    </form>
                <% } else if(mesa == 2) {%>
                    <form method="POST" action="/viewthedr">
                        <div class="form-row">
                            <div class="col-md-6">
                                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="iname">
                                    <%- include ('./list') %>
                                </select>
                                <input type="hidden" class="form-control" placeholder="Enter Name" value="2" name="ivalue">
                            </div>
                            <div class="col-md-6">
                                <button class="btn btn-danger" type="submit">Submit Speciality</button>
                            </div>
                        </div>
                    </form> 
                <% } %>
            </div>
        </div>        
    </div>
        
    <div class="card" style="margin-top: 40px; margin-bottom: 40px;">
        <h5 class="card-header" style="background-color: powderblue; text-align: center;">Doctors List</h5>
        <div class="card-body">
            <table class="table table-dark" style="background-color: powderblue;">
                <thead>
                    <tr>
                    <th scope="col">ID</th>
                    <th scope="col">NAME</th>
                    <th scope="col">ADDRESS</th>
                    <th scope="col">FEES</th>
                    <th scope="col">SPECIALITY</th>
                    <th scope="col">E-MAIL</th>
                    <th scope="col">CONTACT</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(typeof users !=='undefined') { %>
                        <% users.forEach((user)=> { %>
                            <tr>
                                <td id = "style_id"><input type="text"  style="width: 25px;text-align: center;" value="<%= user.doctorsid %>" readonly></td>
                                <td id = "style_id"><input type="text" value="<%= user.doctorsname%>" readonly></td>
                                <td id = "style_id"><input type="text" value="<%= user.doctorsaddress %>" readonly></td>
                                <td id = "style_id"><input type="text" style="width: 60px;text-align: center;" value="<%= user.doctorsfees%>" readonly></td>
                                <td id = "style_id"><input type="text" value="<%= user.doctorsspeciality%>" readonly></td>
                                <td id = "style_id"><input type="text" value="<%= user.doctorsemail%>" readonly></td>
                                <td id = "style_id"><input type="text" value="<%= user.doctorscontact%>" readonly></td>
                            </tr>
                        <% }) %>
                    <%}%>
                </tbody>
            </table>
        </div>
    </div>
</section>

<%- include ('./footer') %>

