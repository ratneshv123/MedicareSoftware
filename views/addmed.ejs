<%- include ('./header1') %>

<section>
    <div class="container">
        <br>
        <% if (message.length > 0) { %>
            <div class="alert alert-success col-sm-12" style="text-align: center;"><%= message %></div>
        <% } %>
        <div class="card" style="margin-top: 40px; margin-bottom: 40px;">
            <h5 class="card-header" style="background-color: powderblue;">Add Medicine Details</h5>
            <div class="card-body">
                <form action="/addthemedicine" method="post">
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="validationDefault01">Enters the Medicine Name</label>
                            <input type="text" class="form-control" id="validationDefault01" placeholder="Medicine Name" name="imediname" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="validationDefault02">Medicine Usage</label>
                            <input type="text" class="form-control" id="validationDefault02" placeholder="Medicine Usage" name="imediusage" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="validationDefault02">Symptoms type</label>
                            <select class="form-control" id="inlineFormCustomSelect" name="iprefname">
                                <option selected>Choose your option.....</option>
                                <% if(typeof users !=='undefined') { %>
                                    <% users.forEach((user)=> { %>
                                        <option><%-user.symptomsname%></option>
                                    <% }) %>
                                <%}%>
                            </select>
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Submit form</button>
                </form>
            </div>
        </div>        
    </div>
</section>

<%- include ('./footer') %>

