<%- include ('../header1') %>

<section>
    <div class="container">
        <div class="card" style="margin-top: 40px; margin-bottom: 40px;">
            <h5 class="card-header" style="background-color: powderblue;text-align: center;">Update</h5>
            <form action="/finalupdatemedicine" method="post">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-header" style="background-color: powderblue;text-align: center;">Present Detail</h5><br>
                                <input type="text" style="text-align: center;" class="form-control" placeholder="<%=user.id%>" name="medicineid" disabled><br>
                                <input type="text" style="text-align: center;" class="form-control" placeholder="<%=user.name%>" name="medicinename" disabled><br>
                                <input type="text" style="text-align: center;" class="form-control" placeholder="<%=user.usage%>" name="medicineusage" disabled><br>
                                <input type="text" style="text-align: center;" class="form-control" placeholder="<%=user.symptomname%>" name="symptomname" disabled><br>
                             </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-header" style="background-color: powderblue;text-align: center;">To Change</h5><br>
                                <input type="text" style="text-align: center;" class="form-control" value="<%=user.id%>" placeholder="<%=user.id%>" name="id" readonly><br>
                                <input type="text" style="text-align: center;" class="form-control" placeholder="Medicine Name" name="name"><br>
                                <input type="text" style="text-align: center;" class="form-control" placeholder="Usage" name="usage"><br>
                                <select class="form-control" id="inlineFormCustomSelect" name="symptomname">
                                    <option selected>Choose your Symptom.....</option>
                                    <% if(typeof users !=='undefined') { %>
                                        <% users.forEach((user)=> { %>
                                            <option><%-user.symptomsname%></option>
                                        <% }) %>
                                    <%}%>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-danger" style="width: 100%;">Click here to Update New Changes</button> 
            </form>   
        </div>
    </div>
</section>

<%- include ('../footer') %>

