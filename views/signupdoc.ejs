<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    
    <!-- Internal CSS -->
    <link href="../stylesheet/style.css" rel="stylesheet" type="text/css">

    <!-- Font Awesomw -->
    <script src="https://kit.fontawesome.com/ff6ae855f8.js" crossorigin="anonymous"></script>
    
    <title>Home page</title>
  </head>
  <body>
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color:deepskyblue;">
        <a class="navbar-brand" href="#" >
            <img src="../images/logo.png" width="300" height="55" class="d-inline-block align-top" style="margin: 10px;">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="nav justify-content-end">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/about">about</a>
                </li>
            </ul>
        </div>
    </nav>

    <% if (message.length > 0) { %>
        <div class="alert alert-success col-sm-12" style="text-align: center;"><%= message %></div>
    <% } %>

    <section>
        <div class="container">
            <div class="card" style="margin-top: 40px; margin-bottom: 40px;">
                <h5 class="card-header" style="background-color: powderblue;">Register as a Doctor</h5>
                <div class="card-body">
                    <form action="/signupdocform" method="post"> 
                        <div class="form-row" style="margin: 40px;">
                            <div class="col-md-8">
                                <label style="font-weight: 700;" for="validationDefault01">Full Name</label>
                                <input type="text" class="form-control" id="validationDefault01" placeholder="Full Name" name="ifname" required>
                            </div>
                            <div class="col-md-4">
                                <label style="font-weight: 700;" for="validationDefault01">Speciality</label>
                                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="idrspeciality" required>
                                    <%- include ('./list') %>
                                </select> </div>
                        </div>
                        <div class="form-row" style="margin: 40px;">
                            <div class="col-md-6">
                                <label style="font-weight: 700;" for="validationDefault03">E-Mail</label>
                                <input type="text" class="form-control" id="validationDefault03" placeholder="E-Mail" name="iemail" required>
                            </div>
                            <div class="col-md-6">
                                <label style="font-weight: 700;" for="validationDefault04">Mobile No.</label>
                                <input type="text" class="form-control" id="validationDefault04" placeholder="Mob No" name="imobno" required>
                            </div>
                        </div>
                        <div class="form-row" style="margin: 40px;">
                            <div class="col-md-10">
                                <label style="font-weight: 700;" for="validationDefault03">Address</label>
                                <input type="text" class="form-control" id="validationDefault03" placeholder="Address" name="iaddress" required>
                            </div>
                            <div class="col-md-2">
                                <label style="font-weight: 700;" for="validationDefault04">Fees</label>
                                <input type="text" class="form-control" id="validationDefault04" placeholder="Fees" name="ifees" required>
                            </div>
                        </div>
                        <div class="form-row" style="margin: 40px;">
                            <div class="col-md-6">
                                <label style="font-weight: 700;" for="validationDefaultUsername">Username</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroupPrepend2">@</span>
                                    </div>
                                    <input type="text" class="form-control" id="validationDefaultUsername" placeholder="Username" aria-describedby="inputGroupPrepend2" name="iusername" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label style="font-weight: 700;" for="validationDefaultUsername" >Password</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="validationDefaultUsername" placeholder="Password" aria-describedby="inputGroupPrepend2" name="ipassword" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-row" style="margin: 40px;">
                            <button class="btn btn-primary" type="submit" style="width: 300px;">Register</button>
                        </div>
                    </form>
                    <div>
                        <a href="/" class="mylabel">Log In</a>
                    </div>
                </div>
            </div>        
        </div>
    </section>

<%- include ('./footer') %>
    
