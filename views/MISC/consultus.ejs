<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- in case we have to delete below one -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <!-- Internal CSS -->
    <link href="../stylesheet/style.css" rel="stylesheet" type="text/css">
    
    <title>Medicare++</title>
  </head>
  <body>
    
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color:deepskyblue;">
        <a class="navbar-brand" href="#" >
            <img src="../images/logo.png" width="300" height="55" class="d-inline-block align-top" style="margin: 10px;">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="nav justify-content-end">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <!-- <li class="nav-item">
                    <a class="nav-link" href="/doctor">Doctors</a>
                </li> -->
                <li class="nav-item">
                    <a class="nav-link" href="/about">about</a>
                </li>
            </ul>
        </div>
    </nav>

    <br>

    <section>
        <div class="row" style="margin: 20px;">
            <div class="col-md-6 mb-3 card">
                <h5 class="card-header myclass1">CONSULT US</h5>
                <div class="card-body">
                    <form method="POST">
                        <div class="form-row" style="margin: 40px;">
                            <div class="col-md-12">
                                <label style="font-weight: 700;" for="validationDefault01">Full name</label>
                                <input type="text" class="form-control" id="validationDefault01" placeholder="Full name" name="ifname" value=<%=value1.consultancyname%>>
                            </div>
                        </div>
                        <div class="form-row" style="margin: 40px;">
                            <div class="col-md-12">
                                <label style="font-weight: 700;" for="validationDefault03">E-Mail</label>
                                <input type="text" class="form-control" id="validationDefault03" placeholder="E-Mail" name="iemail" value=<%=value1.consultancyemail%>>
                            </div>
                        </div>
                        <div class="form-row" style="margin: 40px;">
                            <div class="col-md-12">
                                <label style="font-weight: 700;" for="validationDefault04">Mobile No.</label>
                                <input type="text" class="form-control" id="validationDefault04" placeholder="Mob No" name="imobno" value=<%=value1.consultancymobno%>>
                            </div>
                        </div>
                        <div class="form-row" style="margin: 40px;">
                            <div class="col-md-12">
                                <label style="font-weight: 700;" for="validationDefault04">Choose Your Symptoms</label>
                                <select class="border-2 p-0 font-14 form-control" id="inlineFormCustomSelect" name="isymptoms">
                                    <option value="<%=value1.consultancysymptoms%>" selected>Choose your Symptoms...</option>
                                    <% for(var i=0;i<value4.length;i++) { %>
                                        <option><%= value4[i].symptomsname %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" formaction="/checksymptomdoc" class="btn btn-info btn-md" style="font-weight: bolder;">Click here to check all the doctors for the above Symptom.</button>
                        </div>
                        <div class="form-row" style="margin: 40px;">
                            <div class="col-md-12">
                                <label style="font-weight: 700;" for="validationDefault04">Choose Doctors</label>
                                <select class="border-2 p-0 font-14 form-control" id="inlineFormCustomSelect" name="idoctorname" value="value">
                                    <option selected>Choose Doctors for details...</option>
                                    <% for(var i=0;i<value2.length;i++) { %>
                                        <option><%= value2[i].doctorsname %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" formaction="/doctordetails" class="btn btn-info btn-md" style="font-weight: bolder;">Click here to check all the doctors for the above Symptom.</button>
                        </div>
                    </form>
                </div>
            </div>
            <% if( cards == 1 ) { %>
            <div class="col-md-6 mb-3 card">
                <h5 class="card-header myclass1">CONSULT US</h5>
                <div class="card-body">
                    <div class="form-row" style="margin: 40px;">
                        <div class="col-md-12">
                            <label style="font-weight: 700;" for="validationDefault01">Doctors ID</label>
                            <input type="text" class="form-control" id="validationDefault01" name="ifname" value=<%=value3[0].doctorsid%> disabled>
                        </div>
                    </div>
                    <div class="form-row" style="margin: 40px;">
                        <div class="col-md-12">
                            <label style="font-weight: 700;" for="validationDefault03">Doctors Name</label>
                            <input type="text" class="form-control" id="validationDefault03"  name="iemail" value=<%-value3[0].doctorsname%> disabled>
                        </div>
                    </div>
                    <div class="form-row" style="margin: 40px;">
                        <div class="col-md-12">
                            <label style="font-weight: 700;" for="validationDefault04">Address</label>
                            <input type="text" class="form-control" id="validationDefault04"  name="imobno" value=<%-value3[0].doctorsaddress%> disabled>
                        </div>
                    </div>
                    <div class="form-row" style="margin: 40px;">
                        <div class="col-md-12">
                            <label style="font-weight: 700;" for="validationDefault01">Fees</label>
                            <input type="text" class="form-control" id="validationDefault01" name="ifname" value=<%=value3[0].doctorsfees%> disabled>
                        </div>
                    </div>
                    <div class="form-row" style="margin: 40px;">
                        <div class="col-md-12">
                            <label style="font-weight: 700;" for="validationDefault03">Specialities</label>
                            <input type="text" class="form-control" id="validationDefault03"  name="iemail" value=<%-value3[0].doctorsspeciality%> disabled>
                        </div>
                    </div>
                    <div class="form-row" style="margin: 40px;">
                        <div class="col-md-12">
                            <label style="font-weight: 700;" for="validationDefault04">E-Mail</label>
                            <input type="text" class="form-control" id="validationDefault04"  name="imobno" value=<%=value3[0].doctorsemail%> disabled>
                        </div>
                    </div> 
                    <div class="form-row" style="margin: 40px;">
                        <div class="col-md-12">
                            <label style="font-weight: 700;" for="validationDefault04">Contact NO</label>
                            <input type="text" class="form-control" id="validationDefault04"  name="imobno" value=<%=value3[0].doctorscontact%> disabled>
                        </div>
                    </div>                    
                </div>
            </div>
            <% } %>
        </div>
    </section>

    <br>

    <%- include ('../footer') %>

