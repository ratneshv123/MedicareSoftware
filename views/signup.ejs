<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    
    <!-- Internal CSS -->
    <link href="../stylesheet/style.css" rel="stylesheet" type="text/css">
    
    <title>SignUp</title>
  </head>
  <body>

    <% if (message.length > 0) { %>
        <div class="alert alert-success col-sm-12" style="text-align: center;"><%= message %></div>
    <% } %>
    <div class="container" style="border: 4px solid black; border-radius: 20px;margin-top: 50px;!important;">
        
        <form action="/signupform" method="post"> 
            <div class="form-row" style="margin: 40px;">
                <div class="col-md-4">
                    <label style="font-weight: 700;" for="validationDefault01">First name</label>
                    <input type="text" class="form-control" id="validationDefault01" placeholder="First name" name="ifname" required>
                </div>
                <div class="col-md-4">
                    <label style="font-weight: 700;" for="validationDefault01">Middle name</label>
                    <input type="text" class="form-control" id="validationDefault01" placeholder="Middle name" name="imname" >
                </div>
                <div class="col-md-4">
                    <label style="font-weight: 700;" for="validationDefault02">Last name</label>
                    <input type="text" class="form-control" id="validationDefault02" placeholder="Last name" name="ilname" required>
                </div>
            </div>
            <div class="form-row" style="margin: 40px;">
                <div class="col-md-6">
                    <label style="font-weight: 700;" for="validationDefault03">E-Mail</label>
                    <input type="text" class="form-control" id="validationDefault03" placeholder="E-Mail" name="iemail" required>
                </div>
                <div class="col-md-6">
                    <label style="font-weight: 700;" for="validationDefault04">Mobile No.</label>
                    <input type="text" class="form-control" id="validationDefault04" placeholder="Mob No" name="imobno" required>
                </div>
            </div>
            <div class="form-row" style="margin: 40px;">
                <div class="col-md-6">
                    <label style="font-weight: 700;" for="validationDefault03">City</label>
                    <input type="text" class="form-control" id="validationDefault03" placeholder="City" name="icity" required>
                </div>
                <div class="col-md-3">
                    <label style="font-weight: 700;" for="validationDefault04">State</label>
                    <input type="text" class="form-control" id="validationDefault04" placeholder="State" name="istate" required>
                </div>
                <div class="col-md-3">
                    <label style="font-weight: 700;" for="validationDefault05">Zip</label>
                    <input type="text" class="form-control" id="validationDefault05" placeholder="Zip" name="izip" required>
                </div>
            </div>
            <div class="form-row" style="margin: 40px;">
                <div class="col-md-6">
                    <label style="font-weight: 700;" for="validationDefaultUsername">Username</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupPrepend2">@</span>
                        </div>
                        <input type="text" class="form-control" id="validationDefaultUsername" placeholder="Username" aria-describedby="inputGroupPrepend2" name="iusername" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <label style="font-weight: 700;" for="validationDefaultUsername" >Password</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="validationDefaultUsername" placeholder="Password" aria-describedby="inputGroupPrepend2" name="ipassword" required>
                    </div>
                </div>
            </div>
            <div class="form-row" style="margin: 40px;">
                <button class="btn btn-primary" type="submit" style="width: 300px;">SIGN UP</button>
            </div>
        </form>
        <div>
            <a href="/" class="mylabel">Log In</a>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->
    
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    
    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
        -->
</body>
</html>
