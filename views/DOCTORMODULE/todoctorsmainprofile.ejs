  <div class="container">
    <div class="row">
      <div class="col-md">
        <div class="info-box">
            <section>
              <div class="card" style=" margin-bottom: 40px;">
                  <h5 class="card-header" style="background-color: powderblue;">YOUR DETAILS</h5>
                  <div class="card-body">
                      <form  method="post"> 
                          <div class="form-row" style="margin: 40px;">
                              <div class="col-md-2">
                                  <label style="font-weight: 700;" for="validationDefault01">YOUR ID</label>
                                  <input type="text" class="form-control" id="validationDefault01"  placeholder="<%=users[0].doctorsid %>" disabled >
                                  <input type="text" class="form-control" id="validationDefault01" value="<%=users[0].doctorsid %>" name="id" placeholder="<%=users[0].doctorsid %>" hidden>
                              </div>
                              <div class="col-md-4">
                                  <label style="font-weight: 700;" for="validationDefault01">NAME</label>
                                  <input type="text" class="form-control" id="validationDefault01" placeholder="<%=users[0].doctorsname %>" name="name" >
                              </div>
                              <div class="col-md-6">
                                  <label style="font-weight: 700;" for="validationDefault02">ADDRESS</label>
                                  <input type="text" class="form-control" id="validationDefault02" placeholder="<%=users[0].doctorsaddress %>" name="address">
                              </div>
                          </div>
                          <div class="form-row" style="margin: 40px;">
                              <div class="col-md-6">
                                  <label style="font-weight: 700;" for="validationDefault03">E-Mail</label>
                                  <input type="text" class="form-control" id="validationDefault03" name="email" placeholder="<%=users[0].doctorsemail %>" >
                              </div>
                              <div class="col-md-6">
                                  <label style="font-weight: 700;" for="validationDefault04">MOBILE NO</label>
                                  <input type="text" class="form-control" id="validationDefault04" placeholder="<%=users[0].doctorscontact %>" name="contact">
                              </div>
                          </div>
                          <div class="form-row" style="margin: 40px;">
                              <div class="col-md-5">
                                  <label style="font-weight: 700;" for="validationDefaultUsername">PRESENT SPECIALITY</label>
                  
                                  <div class="input-group">
                                      <input type="text" class="form-control" id="validationDefaultUsername" placeholder="<%=users[0].doctorsspeciality %>" aria-describedby="inputGroupPrepend2" name="speciality" disabled>
                                  </div>
                                  <label style="font-weight: 700;" for="validationDefaultUsername">SELECT TO CHANGE SPECIALITY</label>
                                  <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="speciality" placeholder="<%=users[0].doctorsspeciality %>" required>
                                      <%- include ('../list') %>
                                  </select>
                              </div>
                              <div class="col-md-2">
                                  <label style="font-weight: 700;" for="validationDefaultUsername">FEES</label>
                                  <div class="input-group">
                                      <input type="text" class="form-control" id="validationDefaultUsername" placeholder="<%=users[0].doctorsfees %>" aria-describedby="inputGroupPrepend2" name="fees" >
                                  </div>
                              </div>
                          </div>
                          <button type="submit" class="btn btn-danger" formaction="/updatethedoctordetails">CLICK HERE TO CHANGE DETAILS</button> 
                      </form>
                  </div>
              </div>        
            </section>
        </div>
      </div>
