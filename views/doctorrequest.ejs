<%- include ('./header1') %>

<table class="table table-dark" style="background-color: powderblue;">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">NAME</th>
        <th scope="col">ADDRESS</th>
        <th scope="col">FEES</th>
        <th scope="col">SPECIALITY</th>
        <th scope="col">E-MAIL</th>
        <th scope="col">CONTACT</th>
        <th scope="col">ACCEPT</th>
        <th scope="col">REJECT</th>
      </tr>
    </thead>
    <tbody>
        <% if(typeof users !=='undefined') { %>
            <% users.forEach((user)=> { %>
                <tr>
                    <form method="POST">
                        <td id = "style_id"><input type="text" style="width: 25px;text-align: center;" value="<%= user.idsignindoc %>" name="doctorid" readonly></td>
                        <td id = "style_id"><input type="text" style="width: 120px;" value="<%= user.signindocname%>" name="doctorname" readonly></td>
                        <td id = "style_id"><input type="text" value="<%= user.signindocaddress %>" name="doctoraddress" readonly></td>
                        <td id = "style_id"><input type="text" style="width: 60px;text-align: center;" name="doctorfees" value="<%= user.signindocfees%>" readonly></td>
                        <td id = "style_id"><input type="text" value="<%= user.signindocspeciality%>" name="doctorspeciality" readonly></td>
                        <td id = "style_id"><input type="text" value="<%= user.signindocemail%>" name="doctorsemail" readonly></td>
                        <td id = "style_id"><input type="text" value="<%= user.signindocmob%>" name="doctorsmobno" readonly></td>
                        <td id = "style_id"><button type="submit" formaction="/acceptdoctor" class="btn btn-danger">Accept</button></td>
                        <td id = "style_id"><button type="submit" formaction="/rejectdoctor" class="btn btn-primary">Reject</button></td>
                    </form>
                </tr>
            <% }) %>
        <% } %>
    </tbody>
</table>

<%- include ('./footer') %>

<style>
    .nav-link{
        font-size: medium;
        color: white;
        text-transform: uppercase;
        font-weight: bold;
        display: block;
        font-family:Georgia, 'Times New Roman', Times, serif
    }
</style>