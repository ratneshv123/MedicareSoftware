<%- include ('../header1') %>

<section>
    <div class="container">
        <div class="card" style="margin-top: 40px; margin-bottom: 40px;">
            <h5 class="card-header" style="background-color: powderblue;text-align: center;">Update</h5>
            <form action="/letupdatesymptomdetails" method="post">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-header" style="background-color: powderblue;text-align: center;">Present Detail</h5><br>
                                <input type="text" style="text-align: center;" class="form-control" placeholder="<%=user.id%>"  disabled><br>
                                <input type="text" style="text-align: center;" class="form-control" placeholder="<%=user.name%>"  disabled><br>
                                <input type="text" style="text-align: center;" class="form-control" placeholder="<%=user.speciality%>" name="speciality" disabled><br>
                               </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-header" style="background-color: powderblue;text-align: center;">To Change</h5><br>
                                <input type="text" style="text-align: center;" class="form-control" value="<%=user.id%>" placeholder="<%=user.id%>" name="ismyid" readonly><br>
                                <input type="text" style="text-align: center;" class="form-control" placeholder="Symptom Name" name="ismyname" ><br>
                                 <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="speciality">
                                    <%- include ('../list') %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-danger" style="width: 100%;">Click here to Update New Changes</button> 
            </form>   
        </div>
    </div>
</section>

